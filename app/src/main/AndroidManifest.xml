<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kollectivemobile.euki">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/AppTheme.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.main.MainActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.onboarding.OnboardingActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.home.content.ContentItemActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.home.abortion.MainAbortionActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.home.search.SearchActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label="" android:windowSoftInputMode = "stateVisible" />
        <activity android:name=".ui.quiz.QuizActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.calendar.filter.FilterActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.calendar.reminders.RemindersActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.privacy.PrivacyPinSetupActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.pin.CheckPinActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.calendar.appointments.AppointmentsActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.calendar.appointments.FutureAppointmentActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.browser.BrowserActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.track.TrackActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.bookmarks.BookmarksActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>
        <activity android:name=".ui.cycle.settings.SettingsActivity" android:theme="@style/MainTheme" android:screenOrientation="portrait" android:label=""/>

        <receiver android:name=".alarm.AlarmReceiver"/>
    </application>

</manifest>
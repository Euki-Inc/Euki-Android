<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_start"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/dimen_x10_5"
            android:layout_marginBottom="@dimen/dimen_x10_5"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dimen_x7_5"
                android:src="@drawable/ic_onboarding_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_1_text"
                style="@style/BigBody"/>

        </LinearLayout>

    </RelativeLayout>
    
    <Button
        android:id="@+id/btn_start"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_x19_5"
        android:text="@string/lets_start"
        style="@style/PurpleButton" />

</RelativeLayout>
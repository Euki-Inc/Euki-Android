<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_x3_5"
        android:paddingRight="@dimen/dimen_x3_5"
        android:paddingTop="@dimen/dimen_x2_5"
        android:orientation="horizontal"
        android:gravity="top">

        <View
            android:id="@+id/v_circle"
            android:layout_width="@dimen/dimen_x2_5"
            android:layout_height="@dimen/dimen_x2_5"
            android:layout_marginTop="@dimen/dimen_x1_5"
            android:background="@drawable/bkg_circular_purple_solid"
            android:backgroundTint="@color/bleeding"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_x1_6"
            android:text="Medium; 3 cups, 1 liner"
            style="@style/BodyDefault"/>

    </LinearLayout>

</LinearLayout>

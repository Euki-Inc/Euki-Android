<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ExpandableContainer">

    <LinearLayout
        android:id="@+id/ll_title"
        style="@style/DailyItemNameContainer">
        
        <View
            android:id="@+id/v_circle"
            android:backgroundTint="@color/bleeding"
            style="@style/DailyItemCircle"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/bleeding"
            style="@style/DailyItemText"/>

        <ImageView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_x2_5"
            android:src="@drawable/ic_tracking_info"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        style="@style/DailyItemContent">
        
        <LinearLayout
            android:id="@+id/ll_include_cycle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_x6_5"
            android:layout_marginLeft="@dimen/dimen_x6_5"
            android:layout_marginBottom="@dimen/dimen_x3_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_include_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_track_cycle_off"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_x2_5"
                android:text="@string/bleeding_track_cycle_info"
                android:singleLine="true"
                android:ellipsize="none"
                style="@style/TextStyle31"/>

        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            style="@style/GridLayout">

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_size_1"
                android:tag="1"
                app:title="@string/bleeding_size_1"
                app:singleSelection="true"
                app:imageRes="@drawable/icon_bleeding_size_1"
                app:isRadio="true"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_size_2"
                android:tag="2"
                app:title="@string/bleeding_size_2"
                app:singleSelection="true"
                app:imageRes="@drawable/icon_bleeding_size_2"
                app:isRadio="true"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_size_3"
                android:tag="3"
                app:title="@string/bleeding_size_3"
                app:singleSelection="true"
                app:imageRes="@drawable/icon_bleeding_size_3"
                app:isRadio="true"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_size_4"
                android:tag="4"
                app:title="@string/bleeding_size_4"
                app:singleSelection="true"
                app:imageRes="@drawable/icon_bleeding_size_4"
                app:isRadio="true"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_clot_1"
                android:tag="1"
                app:title="@string/bleeding_clots_1"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_bleeding_clot_1"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_clot_2"
                android:tag="2"
                app:title="@string/bleeding_clots_2"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_bleeding_clot_2"
                style="@style/SelectableButton"/>

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_x3_5"
            android:layout_marginBottom="@dimen/dimen_x7_5"
            android:text="@string/tap_for"
            style="@style/BodyDefault"/>

        <androidx.gridlayout.widget.GridLayout
            style="@style/GridLayout">

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_product_1"
                android:tag="1"
                app:title="@string/menstruation_1"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_menstruation_1"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_product_2"
                android:tag="2"
                app:title="@string/menstruation_2"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_menstruation_2"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_product_3"
                android:tag="3"
                app:title="@string/menstruation_3"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_menstruation_3"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_product_4"
                android:tag="4"
                app:title="@string/menstruation_4"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_menstruation_4"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_product_5"
                android:tag="5"
                app:title="@string/menstruation_5"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_menstruation_5"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_product_6"
                android:tag="5"
                app:title="@string/menstruation_5"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_menstruation_6"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_bleeding_product_7"
                android:tag="5"
                app:title="@string/menstruation_7"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_menstruation_7"
                style="@style/SelectableButton"/>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_x7_5"
        android:paddingRight="@dimen/dimen_x7_5"
        android:paddingTop="@dimen/dimen_x3_5"
        android:paddingBottom="@dimen/dimen_x3_5"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:id="@+id/v_circle"
            android:layout_width="@dimen/dimen_x4_5"
            android:layout_height="@dimen/dimen_x4_5"
            android:background="@drawable/ic_calendar_filter_on"
            android:backgroundTint="@color/blueberry"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_x3_5"
            android:text="Bleeding"
            style="@style/BodyDefault"/>

    </LinearLayout>

</LinearLayout>

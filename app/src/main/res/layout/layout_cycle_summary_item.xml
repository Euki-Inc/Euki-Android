<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_x8_10"
        android:layout_marginHorizontal="@dimen/dimen_x3_5"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Jun 7 - today"
            style="@style/TextStyle35"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_sliders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_x2_9"
                android:background="@drawable/bkg_cycle_summary_slider"/>

            <RelativeLayout
                android:id="@+id/rl_bleeding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_x2_9"
                android:layout_marginRight="300dp"
                android:background="@drawable/bkg_cycle_summary_bleeding">

                <TextView
                    android:id="@+id/tv_bleeding"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:layout_centerInParent="true"
                    style="@style/TextStyle36"/>

            </RelativeLayout>

            <View
                android:id="@+id/v_day_indicator"
                android:layout_width="@dimen/dimen_x2_5"
                android:layout_height="@dimen/dimen_x2_5"
                android:background="@drawable/bkg_cycle_summary_today"
                android:layout_marginLeft="150dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_x1_5"
            android:layout_marginTop="2dp"
            android:text="@string/period"
            style="@style/TextStyle37"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

</LinearLayout>

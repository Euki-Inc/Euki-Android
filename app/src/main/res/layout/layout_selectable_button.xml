<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/calendar_item_width"
            android:layout_height="@dimen/calendar_item_height">

            <RelativeLayout
                android:layout_width="@dimen/calendar_item_height"
                android:layout_height="@dimen/calendar_item_height"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_bleeding_size_1"
                    android:layout_margin="2dp"/>

                <View
                    android:id="@+id/v_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_circular_purple"/>

            </RelativeLayout>
            
            <TextView
                android:id="@+id/tv_counter"
                android:layout_width="@dimen/calendar_item_text_size"
                android:layout_height="@dimen/calendar_item_text_size"
                android:layout_marginBottom="4dp"
                android:text="1"
                android:background="@drawable/bkg_circular_purple_solid"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                style="@style/TextStyle13"/>

        </RelativeLayout>
        
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-2dp"
            android:gravity="center"
            android:text="@string/bleeding_size_1"
            android:lines="3"
            style="@style/TextStyle12"/>
        
    </LinearLayout>



</RelativeLayout>

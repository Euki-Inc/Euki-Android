<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kollectivemobile.euki.ui.cycle.days.HorizontalCarouselRecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_x3_100"
            android:clipToPadding="false" />

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/dimen_x8_5"
            android:layout_height="@dimen/dimen_x8_5"
            android:src="@drawable/ic_cycle_arrow_left"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/dimen_x2_5"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dimen_x8_5"
            android:layout_height="@dimen/dimen_x8_5"
            android:src="@drawable/ic_cycle_arrow_right"
            android:layout_marginRight="@dimen/dimen_x2_5"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/day_summary_data_title"
        style="@style/TextStyle33"/>

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ExpandableContainer">

    <LinearLayout
        android:id="@+id/ll_title"
        style="@style/DailyItemNameContainer">
        
        <View
            android:id="@+id/v_circle"
            android:backgroundTint="@color/sexual_activity"
            style="@style/DailyItemCircle"/>

        <TextView
            android:text="@string/sexual_activity"
            style="@style/DailyItemText"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        style="@style/DailyItemContent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_x1_5"
            android:layout_marginLeft="@dimen/dimen_x4_5"
            android:layout_marginBottom="@dimen/dimen_x2_5"
            android:text="@string/protection_sti"
            style="@style/BodyDefault"/>

        <androidx.gridlayout.widget.GridLayout
            style="@style/GridLayout">

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_sti_1"
                android:tag="1"
                app:title="@string/protection_sti_1"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_sti_1"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_sti_2"
                android:tag="2"
                app:title="@string/protection_sti_2"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_sti_2"
                style="@style/SelectableButton"/>

            <View
                android:layout_width="@dimen/calendar_item_width"
                style="@style/SelectableButton"/>

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_x3_5"
            android:layout_marginLeft="@dimen/dimen_x4_5"
            android:layout_marginBottom="@dimen/dimen_x2_5"
            android:text="@string/protection_pregnancy"
            style="@style/BodyDefault"/>

        <androidx.gridlayout.widget.GridLayout
            style="@style/GridLayout">

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_pregnancy_1"
                android:tag="1"
                app:title="@string/protection_pregnancy_1"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_pregnancy_1"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_pregnancy_2"
                android:tag="2"
                app:title="@string/protection_pregnancy_2"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_pregnancy_2"
                style="@style/SelectableButton"/>

            <View
                android:layout_width="@dimen/calendar_item_width"
                style="@style/SelectableButton"/>

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_x3_5"
            android:layout_marginLeft="@dimen/dimen_x4_5"
            android:layout_marginBottom="@dimen/dimen_x2_5"
            android:text="@string/protection_other"
            style="@style/BodyDefault"/>

        <androidx.gridlayout.widget.GridLayout
            style="@style/GridLayout">

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_other_1"
                android:tag="1"
                app:title="@string/protection_other_1"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_other_1"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_other_2"
                android:tag="2"
                app:title="@string/protection_other_2"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_other_2"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_other_3"
                android:tag="3"
                app:title="@string/protection_other_3"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_other_3"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_other_4"
                android:tag="4"
                app:title="@string/protection_other_4"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_other_4"
                style="@style/SelectableButton"/>

            <com.kollectivemobile.euki.ui.common.views.SelectableButton
                android:id="@+id/sb_sexual_activity_other_5"
                android:tag="5"
                app:title="@string/protection_other_5"
                app:singleSelection="false"
                app:imageRes="@drawable/icon_sexual_activity_other_5"
                style="@style/SelectableButton"/>

            <View
                android:layout_width="@dimen/calendar_item_width"
                style="@style/SelectableButton"/>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</LinearLayout>
